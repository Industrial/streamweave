%% streamweave: begin
%% streamweave: input configuration -> xor.configuration
%% streamweave: input in1 -> xor.in1
%% streamweave: input in2 -> xor.in2
%% streamweave: output output <- xor.out
%% streamweave: output error <- xor.error
%% streamweave: node xor kind=XorNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  in1["in1"]
  in2["in2"]
  output["output"]
  error["error"]

  subgraph xor["XorNode"]
    direction LR
    xor_in_configuration["configuration"]
    xor_in_in1["in1"]
    xor_in_in2["in2"]
    xor_core["xor"]
    xor_out_output["output"]
    xor_out_error["error"]
    xor_in_configuration --> xor_core
    xor_in_in1 --> xor_core
    xor_in_in2 --> xor_core
    xor_core --> xor_out_output
    xor_core --> xor_out_error
  end

  configuration --> xor_in_configuration
  in1 --> xor_in_in1
  in2 --> xor_in_in2
  xor_out_output --> output
  xor_out_error --> error
