%% streamweave: begin
%% streamweave: input configuration -> not.configuration
%% streamweave: input input -> not.in
%% streamweave: output output <- not.out
%% streamweave: output error <- not.error
%% streamweave: node not kind=NotNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph not["NotNode"]
    direction LR
    not_in_configuration["configuration"]
    not_in_in["in"]
    not_core["not"]
    not_out_output["output"]
    not_out_error["error"]
    not_in_configuration --> not_core
    not_in_in --> not_core
    not_core --> not_out_output
    not_core --> not_out_error
  end

  configuration --> not_in_configuration
  input --> not_in_in
  not_out_output --> output
  not_out_error --> error
