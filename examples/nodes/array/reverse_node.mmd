%% streamweave: begin
%% streamweave: input configuration -> reverse.configuration
%% streamweave: input input -> reverse.in
%% streamweave: output output <- reverse.out
%% streamweave: output error <- reverse.error
%% streamweave: node reverse kind=ArrayReverseNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph reverse["ArrayReverseNode"]
    direction LR
    reverse_in_configuration["configuration"]
    reverse_in_in["in"]
    reverse_core["reverse"]
    reverse_out_output["output"]
    reverse_out_error["error"]
    reverse_in_configuration --> reverse_core
    reverse_in_in --> reverse_core
    reverse_core --> reverse_out_output
    reverse_core --> reverse_out_error
  end

  configuration --> reverse_in_configuration
  input --> reverse_in_in
  reverse_out_output --> output
  reverse_out_error --> error
