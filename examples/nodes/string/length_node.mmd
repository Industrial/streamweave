%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph length["StringLengthNode"]
    direction LR
    length_in_configuration["configuration"]
    length_in_in["in"]
    length_core["length"]
    length_out_output["output"]
    length_out_error["error"]
    length_in_configuration --> length_core
    length_in_in --> length_core
    length_core --> length_out_output
    length_core --> length_out_error
  end

  configuration --> length_in_configuration
  input --> length_in_in
  length_out_output --> output
  length_out_error --> error
