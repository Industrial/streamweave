%% streamweave: begin
%% streamweave: input configuration -> uppercase.configuration
%% streamweave: input input -> uppercase.in
%% streamweave: output output <- uppercase.out
%% streamweave: output error <- uppercase.error
%% streamweave: node uppercase kind=StringUppercaseNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph uppercase["StringUppercaseNode"]
    direction LR
    uppercase_in_configuration["configuration"]
    uppercase_in_in["in"]
    uppercase_core["uppercase"]
    uppercase_out_output["output"]
    uppercase_out_error["error"]
    uppercase_in_configuration --> uppercase_core
    uppercase_in_in --> uppercase_core
    uppercase_core --> uppercase_out_output
    uppercase_core --> uppercase_out_error
  end

  configuration --> uppercase_in_configuration
  input --> uppercase_in_in
  uppercase_out_output --> output
  uppercase_out_error --> error
