%% streamweave: begin
%% streamweave: input configuration -> trim.configuration
%% streamweave: input input -> trim.in
%% streamweave: output output <- trim.out
%% streamweave: output error <- trim.error
%% streamweave: node trim kind=StringTrimNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph trim["StringTrimNode"]
    direction LR
    trim_in_configuration["configuration"]
    trim_in_in["in"]
    trim_core["trim"]
    trim_out_output["output"]
    trim_out_error["error"]
    trim_in_configuration --> trim_core
    trim_in_in --> trim_core
    trim_core --> trim_out_output
    trim_core --> trim_out_error
  end

  configuration --> trim_in_configuration
  input --> trim_in_in
  trim_out_output --> output
  trim_out_error --> error
