    break_node_out_out["out"]
    break_node_out_error["error"]
    break_node_in_configuration --> break_node_core
    break_node_in_in --> break_node_core
    break_node_in_signal --> break_node_core
    break_node_core --> break_node_out_out
    break_node_core --> break_node_out_error
  end

  configuration --> break_node_in_configuration
  in --> break_node_in_in
  signal --> break_node_in_signal
  break_node_out_out --> out
  break_node_out_error --> error
