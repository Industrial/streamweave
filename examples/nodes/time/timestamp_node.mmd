%% streamweave: begin
%% streamweave: input configuration -> timestamp.configuration
%% streamweave: input input -> timestamp.in
%% streamweave: output output <- timestamp.out
%% streamweave: output error <- timestamp.error
%% streamweave: node timestamp kind=TimestampNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph timestamp["TimestampNode"]
    direction LR
    timestamp_in_configuration["configuration"]
    timestamp_in_in["in"]
    timestamp_core["timestamp"]
    timestamp_out_output["output"]
    timestamp_out_error["error"]
    timestamp_in_configuration --> timestamp_core
    timestamp_in_in --> timestamp_core
    timestamp_core --> timestamp_out_output
    timestamp_core --> timestamp_out_error
  end

  configuration --> timestamp_in_configuration
  input --> timestamp_in_in
  timestamp_out_output --> output
  timestamp_out_error --> error
