%% streamweave: begin
%% streamweave: input configuration -> read_var.configuration
%% streamweave: input name -> read_var.name
%% streamweave: output out <- read_var.out
%% streamweave: output error <- read_var.error
%% streamweave: node read_var kind=ReadVariableNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  name["name"]
  out["out"]
  error["error"]

  subgraph read_var["ReadVariableNode"]
    direction LR
    read_var_in_configuration["configuration"]
    read_var_in_name["name"]
    read_var_core["read_var"]
    read_var_out_out["out"]
    read_var_out_error["error"]
    read_var_in_configuration --> read_var_core
    read_var_in_name --> read_var_core
    read_var_core --> read_var_out_out
    read_var_core --> read_var_out_error
  end

  configuration --> read_var_in_configuration
  name --> read_var_in_name
  read_var_out_out --> out
  read_var_out_error --> error
