%% streamweave: begin
%% streamweave: input configuration -> greater_than.configuration
%% streamweave: input in1 -> greater_than.in1
%% streamweave: input in2 -> greater_than.in2
%% streamweave: output output <- greater_than.out
%% streamweave: output error <- greater_than.error
%% streamweave: node greater_than kind=GreaterThanNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  in1["in1"]
  in2["in2"]
  output["output"]
  error["error"]

  subgraph greater_than["GreaterThanNode"]
    direction LR
    greater_than_in_configuration["configuration"]
    greater_than_in_in1["in1"]
    greater_than_in_in2["in2"]
    greater_than_core["greater_than"]
    greater_than_out_output["output"]
    greater_than_out_error["error"]
    greater_than_in_configuration --> greater_than_core
    greater_than_in_in1 --> greater_than_core
    greater_than_in_in2 --> greater_than_core
    greater_than_core --> greater_than_out_output
    greater_than_core --> greater_than_out_error
  end

  configuration --> greater_than_in_configuration
  in1 --> greater_than_in_in1
  in2 --> greater_than_in_in2
  greater_than_out_output --> output
  greater_than_out_error --> error
