%% streamweave: begin
%% streamweave: input configuration -> average.configuration
%% streamweave: input input -> average.in
%% streamweave: output output <- average.out
%% streamweave: output error <- average.error
%% streamweave: node average kind=AverageNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph average["AverageNode"]
    direction LR
    average_in_configuration["configuration"]
    average_in_in["in"]
    average_core["average"]
    average_out_output["output"]
    average_out_error["error"]
    average_in_configuration --> average_core
    average_in_in --> average_core
    average_core --> average_out_output
    average_core --> average_out_error
  end

  configuration --> average_in_configuration
  input --> average_in_in
  average_out_output --> output
  average_out_error --> error
