%% streamweave: begin
%% streamweave: input configuration -> min.configuration
%% streamweave: input input -> min.in
%% streamweave: output output <- min.out
%% streamweave: output error <- min.error
%% streamweave: node min kind=MinAggregateNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph min["MinAggregateNode"]
    direction LR
    min_in_configuration["configuration"]
    min_in_in["in"]
    min_core["min"]
    min_out_output["output"]
    min_out_error["error"]
    min_in_configuration --> min_core
    min_in_in --> min_core
    min_core --> min_out_output
    min_core --> min_out_error
  end

  configuration --> min_in_configuration
  input --> min_in_in
  min_out_output --> output
  min_out_error --> error
