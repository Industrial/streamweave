%% streamweave: output output <- to_string.out
%% streamweave: output error <- to_string.error
%% streamweave: node to_string kind=ToStringNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph to_string["ToStringNode"]
    direction LR
    to_string_in_configuration["configuration"]
    to_string_in_in["in"]
    to_string_core["to_string"]
    to_string_out_output["output"]
    to_string_out_error["error"]
    to_string_in_configuration --> to_string_core
    to_string_in_in --> to_string_core
    to_string_core --> to_string_out_output
    to_string_core --> to_string_out_error
  end

  configuration --> to_string_in_configuration
  input --> to_string_in_in
  to_string_out_output --> output
  to_string_out_error --> error
