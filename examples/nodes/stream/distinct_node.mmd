%% streamweave: begin
%% streamweave: input configuration -> distinct.configuration
%% streamweave: input input -> distinct.in
%% streamweave: output output <- distinct.out
%% streamweave: output error <- distinct.error
%% streamweave: node distinct kind=DistinctNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph distinct["DistinctNode"]
    direction LR
    distinct_in_configuration["configuration"]
    distinct_in_in["in"]
    distinct_core["distinct"]
    distinct_out_output["output"]
    distinct_out_error["error"]
    distinct_in_configuration --> distinct_core
    distinct_in_in --> distinct_core
    distinct_core --> distinct_out_output
    distinct_core --> distinct_out_error
  end

  configuration --> distinct_in_configuration
  input --> distinct_in_in
  distinct_out_output --> output
  distinct_out_error --> error
