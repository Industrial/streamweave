%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input0["input0"]
  input1["input1"]
  output["output"]
  error["error"]

  subgraph zip["ZipNode"]
    direction LR
    zip_in_configuration["configuration"]
    zip_in_in_0["in_0"]
    zip_in_in_1["in_1"]
    zip_core["zip"]
    zip_out_output["output"]
    zip_out_error["error"]
    zip_in_configuration --> zip_core
    zip_in_in_0 --> zip_core
    zip_in_in_1 --> zip_core
    zip_core --> zip_out_output
    zip_core --> zip_out_error
  end

  configuration --> zip_in_configuration
  input0 --> zip_in_in_0
  input1 --> zip_in_in_1
  zip_out_output --> output
  zip_out_error --> error
