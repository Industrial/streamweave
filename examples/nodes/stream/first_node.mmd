%% streamweave: input input -> first.in
%% streamweave: output output <- first.out
%% streamweave: output error <- first.error
%% streamweave: node first kind=FirstNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph first["FirstNode"]
    direction LR
    first_in_configuration["configuration"]
    first_in_in["in"]
    first_core["first"]
    first_out_output["output"]
    first_out_error["error"]
    first_in_configuration --> first_core
    first_in_in --> first_core
    first_core --> first_out_output
    first_core --> first_out_error
  end

  configuration --> first_in_configuration
  input --> first_in_in
  first_out_output --> output
  first_out_error --> error
