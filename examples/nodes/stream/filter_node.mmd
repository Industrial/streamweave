%% streamweave: begin
%% streamweave: input configuration -> filter.configuration
%% streamweave: input input -> filter.in
%% streamweave: output output <- filter.out
%% streamweave: output error <- filter.error
%% streamweave: node filter kind=FilterNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph filter["FilterNode"]
    direction LR
    filter_in_configuration["configuration"]
    filter_in_in["in"]
    filter_core["filter"]
    filter_out_output["output"]
    filter_out_error["error"]
    filter_in_configuration --> filter_core
    filter_in_in --> filter_core
    filter_core --> filter_out_output
    filter_core --> filter_out_error
  end

  configuration --> filter_in_configuration
  input --> filter_in_in
  filter_out_output --> output
  filter_out_error --> error
