%% streamweave: begin
%% streamweave: input configuration -> for_each.configuration
%% streamweave: input input -> for_each.in
%% streamweave: output output <- for_each.out
%% streamweave: output error <- for_each.error
%% streamweave: node for_each kind=ForEachNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input["input"]
  output["output"]
  error["error"]

  subgraph for_each["ForEachNode"]
    direction LR
    for_each_in_configuration["configuration"]
    for_each_in_in["in"]
    for_each_core["for_each"]
    for_each_out_output["output"]
    for_each_out_error["error"]
    for_each_in_configuration --> for_each_core
    for_each_in_in --> for_each_core
    for_each_core --> for_each_out_output
    for_each_core --> for_each_out_error
  end

  configuration --> for_each_in_configuration
  input --> for_each_in_in
  for_each_out_output --> output
  for_each_out_error --> error
