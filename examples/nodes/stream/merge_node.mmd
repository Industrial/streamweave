%% streamweave: input configuration -> merge.configuration
%% streamweave: input input0 -> merge.in_0
%% streamweave: input input1 -> merge.in_1
%% streamweave: output output <- merge.out
%% streamweave: output error <- merge.error
%% streamweave: node merge kind=MergeNode
%% streamweave: end
%% ---
%% Style B: The node itself is a subgraph; its ports are boxes inside the group.
%% External I/O nodes sit outside and connect to the port boxes on the boundary.
%% ---
flowchart TD
  configuration["configuration"]
  input0["input0"]
  input1["input1"]
  output["output"]
  error["error"]

  subgraph merge["MergeNode"]
    direction LR
    merge_in_configuration["configuration"]
    merge_in_in_0["in_0"]
    merge_in_in_1["in_1"]
    merge_core["merge"]
    merge_out_output["output"]
    merge_out_error["error"]
    merge_in_configuration --> merge_core
    merge_in_in_0 --> merge_core
    merge_in_in_1 --> merge_core
    merge_core --> merge_out_output
    merge_core --> merge_out_error
  end

  configuration --> merge_in_configuration
  input0 --> merge_in_in_0
  input1 --> merge_in_in_1
  merge_out_output --> output
  merge_out_error --> error
